.c-table
    background: $darkGray
    color: #B9B7B2
    font-family: $fontOswald
    font-weight: 400
    margin: 0 auto 4.8rem
    max-width: 38rem
    padding: 3rem 2.4rem
    position: relative
    text-transform: uppercase
    &__row
        border-top: 1px solid #383838
        display: flex
        flex-wrap: wrap
        padding: 3rem 0
        &:last-child
            padding-bottom: 1.5rem
        &--header
            color: $white
            display: none
            font-size: 1.1rem
            letter-spacing: 1.5px
            line-height: 1
            padding: 1.5rem 0
    &__item
        flex: 1 1 5%
        &--half
            flex-grow: 0.5
        &--image-container
            flex: 0 0 100%
            text-align: center

.c-cart
    &__heading
        color: $white
        display: block
        font-size: 2.4rem
        line-height: 1
        margin-bottom: 3.2rem
        text-align: center
        text-transform: uppercase

.u-item-image
    display: block
    position: static
    margin: 0 auto
    max-width: 6.2rem
    vertical-align: middle
.u-item-title
    color: $white
    display: inline-block
    font-size: 1.3rem
    letter-spacing: 1px
    line-height: 1.4
    margin: 1.2rem 0 2.4rem
    padding: 0
    text-align: right
.u-item-amount,
.u-item-qty
    color: $white
    font-size: 1.4rem
    line-height: 3.3rem
    padding-top: 0
.u-item-address
    color: #B9B7B2
    font-size: 1.5rem
    line-height: 3.3rem
    text-align: left
    text-transform: none
.u-item-edit
    background: $black
    border: 1px solid $white
    font-size: 1.3rem
    line-height: 1
    margin: 0
    padding: 0.9rem 1rem
    &:hover
        background: white
        color: $darkGray
        text-decoration: none
.u-item-remove
    border: none
    display: inline-block
    opacity: 0.5
    padding: 0 1.2rem 0 0 !important
    &:hover
        background: none
        color: #FFF
        opacity: 1
    &:before
        icon($iconX)
.u-order-heading
    display: block
    margin-bottom: 1rem
    margin-right: 2rem

.u-remove-form
    height: 100%

.u-cart-postmatter
    centeredBlock(75rem)
.u-coupon-form
    display: inline-block
    input
        border-right: none
        font-size: 1.5rem
        line-height: 3.8rem
        font-weight: 500
        width: 15rem
        border-radius: 0 !important
        box-shadow: none !important
        padding: 0 0 0 1rem
        -webkit-appearance: none
        -moz-appearance: none
        appearance: none
.u-coupon-button
    background: $white
    border: 1px solid #CCC
    border-left: none
    display: inline-block
    font-family: inherit
    font-size: 1.5rem
    line-height: 3.8rem
    padding-right: 1.5rem
    text-transform: uppercase
    vertical-align: top
.u-promotion
    position: relative
    &__result
        absoluteCenter()
        right: 0
        transform: translateY(-5%)

.u-ships-to
    margin-top: 2rem
    position: relative
    transition: all 0.4s ease
    &__calculate
        background: $primary
        border: none
        color: $white
        display: inline-block
        font-size: 1.4rem
        margin-left: 0.8rem
        padding: 0.8rem 2rem
        position: static !important
        transform: none !important
        vertical-align: top
        cursor: pointer
    &.is-loading
        opacity: 0.5
.u-shipping-form
    display: inline
.u-zip-input
    font-size: 1.5rem
    font-weight: 500
    height: 3.3rem
    text-align: center
    width: 11rem
    border-radius: 0 !important
    box-shadow: none !important
    -webkit-appearance: none
    -moz-appearance: none
    appearance: none
.u-actions
    display: flex
    justify-content: space-between
    margin-bottom: 5.2rem

    &-cart
        max-width: 100% !important
        flex-direction: column

    &__continue
        width: 100%
        font-size: 1.3rem
        text-align: center
        margin-bottom: 0.5rem

        &:before
            color: $white
            content: $iconArrow
            display: inline-block
            font-family: $fontIcon
            margin-right: 1.4rem
            transform: rotate(90deg)
            vertical-align: top
            font-size: 2rem

    &__submit
        font-size: 1.3rem
        transition: all 0.4s ease
        width: 100%
        &[disabled]
            background-color: $gray
            cursor: not-allowed
            opacity: 0.5
        &--ready
            &:after
                color: $white
                content: $iconArrow
                display: inline-block
                font-family: $fontIcon
                margin-left: 1.4rem
                transform: rotate(-90deg)
                vertical-align: top
                font-size: 2rem

a.u-promo-back.u-actions__back
    display: inline-block !important
    margin-top: 0.5rem
    padding-left: 0

@media screen and (min-width: 991px)
    a.u-promo-back.u-actions__back
        padding-left: 6.8rem

.c-methods
    margin-top: 4.8rem
    margin-left: 4rem
    &__item
        display: flex
        flex-wrap: wrap
        margin: 0.5rem 0
    &__label
        flex: 1 1 75%
    &__input
        display: none;
    &__amount
        flex: 1
    &__type:before
        background: hsl(36, 80%, 92%);
        box-shadow: 0 0 0 1px hsl(36, 30%, 67%);
        content: '';
        display: inline-block;
        height: 1.4rem;
        margin-right: 1.2rem;
        width: 1.4rem;
    &__input:checked + &__type:before
        background: hsl(36, 30%, 50%);
        border: 3px solid hsl(36, 80%, 92%);

@media $tablet
    .u-order-heading
        display: inline-block
        margin-bottom: 0
    .u-promotion
        &__result
            absoluteCenter()
    .u-ships-to
        &__calculate
            absoluteCenter()

@media $desktop1
    .c-table
        max-width: 75rem
        padding: 4.8rem 4rem
        &__row
            &--header
                display: flex
        &__item
            flex: 1
            &--half
                flex-grow: 0.5
            &--image-container
                flex: 1
                text-align: left

    .c-cart
        &__heading
            font-size: 3.2rem
            margin-bottom: 4.8rem

    .u-item-edit
         padding: 0.9rem 2rem

    .u-item-image
        margin-right: 1.2rem
        position: absolute
    .u-item-amount,
    .u-item-qty
        font-size: 2rem
        font-weight: 300
        line-height: 2.4rem
        padding-top: 0.5rem

    .u-item-address
        line-height: 2.4rem

    .u-item-title
        display: block
        margin: 0 0 0 8.2rem

    .u-actions
        &-cart
            position: relative !important
            display: block
            width: auto !important

        &__continue
            width: auto
            float: left
            padding: 1.5rem 3rem;

        &__submit
            width: auto
            float: right
            padding: 1.5rem 3rem;

    .u-promotion,
    .u-ships-to,
    .c-adjustments
        padding-left: 4rem
        padding-right: 4rem

    .u-position-relative
        position: relative

.u-padding-bottom
    padding-bottom: 4rem

.u-back-button
    centeredBlock(75rem)

.u-cart-back
    padding-left: 4.8rem !important
    position: relative !important
    &:before
        left: 0 !important

@media screen and (max-width: 580px)
    .u-cart-back
        padding-left: 0 !important
    .u-back-button
        text-align: center

.u-edit
    background: $darkGray
    border-color: $white
    border: 1px solid #383838
    display: flex
    flex-wrap: wrap
    left: 5%
    padding: 1.2rem
    position: absolute
    text-align: left
    transform: translateY(-1px)
    width: 90%
    z-index: 1000
    &--disabled
        display: none !important

@media $desktop1
    .u-edit
        background: $darkGray
        border: 1px solid #383838
        display: flex
        flex-wrap: wrap
        justify-content: space-between
        left: auto
        padding: 1.2rem
        position: absolute
        right: 0
        width: 30rem
        z-index: 10

.c-edit-option
    margin-bottom: 1.2rem
    flex: 0 0 calc(50% - 0.6rem)
    align-self: flex-start
    &:first-child
        margin-top: 0
    &:last-child
        margin-bottom: 0
    &__label
        display: block
        margin-bottom: 0.6rem
    &__options
        display: flex
        flex-wrap: wrap
        justify-content: space-between
    &__save
        font-size: 1.4rem
        line-height: 1
        margin-bottom: 0.2rem
        padding: 1.1rem 1.4rem
    input
        background: #191919
        border: none
        color: #b9b7b2
        display: block
        font-family: $fontOswald
        font-size: 1.3rem
        line-height: 2.4rem
        margin: 0
        padding: 0.6rem 0.6rem 0.6rem 1rem
        width: 100%
    &--full
        flex: 0 0 100%
    &--third
        flex: 0 0 calc(33.3333% - 0.8rem)

.u-flex-container
    display: flex
    flex-wrap: wrap
    justify-content: space-between

.u-edit-form
    width: 100%
