.event-modal
	background-color: rgba(255, 255, 255, 0.95)
	cover(fixed)
	overflow-y: scroll
	padding: 7.4rem 1.6rem
	z-index: 10000

	&.-disabled
		visibility: hidden

	&__exit
		buttonReset()
		position: absolute
		right: 0
		top: -4.2rem

		&:before
			font-size: 2rem
			icon($iconX)

	&__inner
		background-color: $black
		color: $white
		marginCenter()
		max-width: 58.3rem
		padding: 5.9rem 4.3rem 3.5rem
		position: relative

	&__title
		color: $white
		spaced(4.3rem)
		text-align: center

	&__symbol
		display: inline-block
		font-size: 1.3rem
		position: relative
		top: -0.5rem
		vertical-align: super

@media screen and (min-width: 768px)
	.event-modal
		&__exit
			right: -5rem
			top: 0

.event-form
	&__fieldset
		border: 0
		min-width: 0
		spaced(4.9rem)

		&:nth-child(2)
			spaced(1.8rem)

	&__legend
		color: $white
		font: 1.5rem/1.5em $fontOswald
		letter-spacing: 1.5px
		spaced(2.6rem)
		text-align: center
		text-transform: uppercase

	&__field
		background-color: rgba(255, 255, 255, 0.1)
		spaced(0.2rem)

		&.-select
			padding: 0.5rem 0.9rem 0.6rem

	&__label
		color: #b9b7b2
		cursor: pointer
		font-size: 1.3rem
		line-height: 1.3em
		margin-right: 0.8rem
		text-transform: uppercase

	&__input,
	&__textarea
		background-color: transparent
		border: 0
		color: $lighterGray
		padding: 1.2rem 1.9rem 1.1rem

		&:focus
			box-shadow: inset 0 0 0 1px #474747
			outline: 0

	&__textarea
		display: block
		height: 7.2rem
		resize: none

	&__buttons
		text-align: center

	&__submit
		buttonReset() // Intentional order
		background-color: $primary
		color: $white
		font: 1.3rem/1.5em $fontOswald
		letter-spacing: 1.5px
		padding: 1.3rem 7.2rem 1.4rem
		text-transform: uppercase

		&:focus,
		&:hover
			background-color: mix($primary, $black, 90%)

		&:active
			background-color: $primary





/*------------------------------------*\
	# Desktop Small
\*------------------------------------*/

@media $desktop1
	.event-form
		&__fieldset
			display: flex
			flex-wrap: wrap
			justify-content: space-between

		&__legend
			flex-basis: 100%

		&__field
			flex-basis: calc(50% - 1px)

			&.-full
				flex-basis: 100%

			&.-half
				flex-basis: calc(50% - 1px)

			&.-one-third
				flex-basis: calc(100% / 3 - 1px)

		&__label
			float: left
			position: relative
			top: 0.5rem

			&.-textarea
				display: inline-block
				float: none
				spaced(0.8rem)

		&__input-wrapper
			display: block
			overflow: hidden

		&__input,
		&__textarea
			width: 100%
