.c-current-card
    background-repeat: no-repeat
    background-size: contain
    display: block
    height: 28rem
    margin: 0 auto 2.4rem
    max-width: 40rem

.c-card-options
    display: flex
    justify-content: flex-start
    flex-wrap: wrap
    text-align: center
    margin-bottom 2rem

    &__reset
        cursor: pointer
        display: block
        font-family: $fontOswald
        font-size: 1.3rem
        letter-spacing: 2px
        line-height: 1
        margin-bottom: 2rem
        margin-top: 2rem
        text-align: center
        text-transform: uppercase
        width: 100%
        &:before
            content: $iconReset
            display: inline-block
            font-family: $fontIcon
            margin-right: 0.5rem

.c-option
    width: 49%
    background-color: #191919
    color: $white
    margin: 0 1px 2px 1px
    padding: 0.5rem
    text-align: center
    &:last-child
        margin-bottom: 0
    &__heading
        display: block
        font-family: $fontOswald
        font-size: 1.3rem
        font-weight: 400
        letter-spacing: 2px
        line-height: 1
        margin-bottom: 0.5rem
        text-transform: uppercase
        text-align: center
    &__thumb
        background-size: cover
        border-radius: 4px
        border: 3px solid transparent
        cursor: pointer
        display: inline-block
        height: 3.6rem
        margin-left: 0.5rem
        width: 3.6rem
        &--selected
            border-color: $accent2
        &:first-child
            margin-left: 0

    .choices
        font-size: 2rem
        &__item
            color: white
            letter-spacing: 0

.c-theme
    width: 98.3%
    text-align: left

.c-ctype
    width: 98.3%
    text-align: center
    
.c-invisible
    visibility:hidden

.add-cart-btn
    max-width: unset !important;
    margin-top: 6rem !important;

@media $tablet
    .add-cart-btn
        max-width: 14rem !important;

.u-card-body
    margin-bottom: 3.2rem
    text-align: center
    p
        margin-bottom: 0.6em

@media screen and (min-width: 768px)
	.u-card-body
		text-align: left

.u-confirm-options
    display: block
    position: relative
    text-align: center
    font-size: 1.3rem
    margin-top: 6rem
    padding: 1.2rem 1rem
    &:after
        content: $iconArrow
        display: inline-block
        font-family: $fontIcon
        font-size: 2rem
        left: 0
        line-height: 1
        margin-left: 1.2rem
        transform: rotate(-90deg)

.c-card-form
    background: $darkGray
    margin: 0 auto 2.5rem
    max-width: 50rem
    padding: 3.5rem 3.2rem
    &__header
        margin-bottom: 3rem
    &__card-preview
        display: block
        margin: 0 auto 2.4rem
        max-width: 7rem
        vertical-align: middle
    &__title
        color: $white
        display: block
        font-family: $fontOswald
        font-weight: 400
        letter-spacing: 2px
        text-align: center
        text-transform: uppercase
    &__col
        display: flex
        flex-wrap: wrap
    &__input,
    &__textarea
        background: #1A1A1A
        border: none
        color: $white
        flex: 0 0 100%
        margin: 0.1rem
        &::-webkit-input-placeholder
            color: #B9B7B2
            font-weight: 400
        &::-moz-placeholder
            color: #B9B7B2
            font-weight: 400
        &:-ms-input-placeholder
            color: #B9B7B2
            font-weight: 400
        &:-moz-placeholder
            color: #B9B7B2
            font-weight: 400
    &__input
        padding: 1rem 1.6rem
    &__textarea
        resize: none
    &__submit
        display: block
        width: 100%
        font-size: 1.3rem
    .choices__item
        padding-left: 1.6rem

.u-tab
    &--disabled
        display: none

.u-step-back
    display: none

@media $tablet
    .c-card-options
        centeredBlock(60rem)
    .u-card-body
        centeredBlock(60rem)
    .u-confirm-options
        centeredBlock(14rem)
    .c-card-form
        &__card-preview
            display: inline-block
            margin-bottom: 0
            margin-right: 2.4rem
        &__title
            display: inline-block
            text-align: left
        &__input
        	flex: 1
        &__submit
            centeredBlock(19rem)
        .choices
            flex: 1.174

@media $desktop1
    .c-current-card
        margin-bottom: 0

    .u-desktop-row
        centeredBlock(130rem)
        display: flex
        flex-wrap: wrap

    .u-desktop-preview,
    .c-card-options,
    .u-card-body
        flex: 1
        padding: 0 16px

    .c-card-options
        flex-direction: column
        order: 1
        max-width: 24em

    .u-desktop-preview
        order: 2

    .u-card-body
        max-width: 38rem
        order: 3
        text-align: left
        padding-left: 5rem
        margin-bottom: 0

    .u-step-back
        display: block
        cursor: pointer
        left: 0rem
        position: absolute
        &--hidden
            display: none !important

    .c-option
        width: 100%
        max-width: 20rem
        margin-left: auto
        margin-right: auto

.u-message
    position: relative
.u-chars
    color: $lightGray
    font-size: 1.3rem
    line-height: 1.7rem
    position: absolute
    right: 1rem
    top: 1rem

@media screen and (max-width: 580px)
	.u-state-selector
		flex: 0 0 99%

.u-amount
	font-size: 1.3rem
	letter-spacing: 0.5px
	line-height: 2.4rem
	padding: 0.7rem 1rem 0.5rem
