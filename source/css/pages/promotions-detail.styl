.promotion-interior
    background-image: url($imgPath + 'bg-dual-pat.png')
    background-repeat: no-repeat
    background-size: contain
    background-position: center

.u-promo-back
    display: none !important
    color: $black
    display: block
    font-family: $fontOswald
    font-size: 1.5rem
    letter-spacing: 1.5px
    line-height: 1.9rem
    margin-bottom: 5rem
    padding-left: 3rem
    position: relative
    text-align: center
    text-transform: uppercase

    &:focus,
    &:hover
        text-decoration: none

    &:before
        content: $iconArrow
        display: inline-block
        font-family: $fontIcon
        font-size: 2.4rem
        left: 0
        line-height: 1
        margin-right: 1.2rem
        transform: rotate(90deg)
.u-promo-title
    font: 4rem/1.2em $fontOswald
    letter-spacing: 4px
    margin-bottom: 4.8rem
.u-promo-lead-text
    centeredBlock(45rem)
    color: $black
    display: block
    letter-spacing: 0.025rem
    margin-bottom: 2.4rem
.u-promo-content
    centeredBlock(45rem)
    margin-bottom: 4rem
.u-promo-button
    margin-bottom: 4rem
    padding-left: 3rem
    padding-right: 3rem

    &:focus,
    &:hover
        background-color: mix($primary, $black, 80%)
        text-decoration: none

    &:after
        color: $white
        content: $iconArrow
        display: inline-block
        font-family: $fontIcon
        margin-left: 1.4rem
        transform: rotate(-90deg)
        vertical-align: top
.u-promo-wrapper
    margin-bottom: 4rem
.u-promo-content-wrapper
    text-align: center
.u-promo-detail-photo
    display: block
    margin: 0 auto

@media screen and (min-width: 999px)
    .u-promo-back
        max-width: 16rem
        padding-left: 6.8rem
        text-align: left
        &:before
            absoluteCenter()
            display: inline-block
            left: 2.4rem
            margin-right: 0
            transform: translateY(-50%) rotate(90deg)
    .u-promo-lead-text
        margin-left: 0
        margin-right: auto
    .u-promo-content
        margin-left: 0
        margin-right: auto
    .u-promo-wrapper
        margin-bottom: 14rem
    .u-promo-content-wrapper
        text-align: left
    .u-promo-button
        margin-bottom: 0

@media $desktop1
    .u-promo-back
        display: block !important
