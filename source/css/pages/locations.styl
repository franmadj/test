.header
    &--map
        padding-top: 0
        padding-bottom: 0
        min-height: auto

.c-map
    position: relative
    border-bottom: 1.6rem solid transparent
    height: 72rem
    &__iframe-container
        background: $lighterSecondary
        overflow: hidden
        position: relative
        top: 0
        width: 100%
        height: 100%
        z-index: 0
    &--loading
        &:after
            background-color: rgba(255,255,255,.75)
            background-image: url($imgPath + 'loading.svg')
            background-position: center center
            background-repeat: no-repeat
            content: ''
            height: 97vh
            left: 50%
            position: absolute
            top: 50%
            transform: translate(-50%, -50%)
            width: 100vw
            z-index: 10

@media $tablet
    .header.header--interior.header--map
        border-left: 0
        border-right: 0

        .nav__list.-main
            border-left-color: $lighterSecondary
            border-right-color: $lighterSecondary

        .nav__list.-main
            background: $lighterSecondary

    .c-map
        height: calc(100vh - 1.6rem)

.c-locations
    display: flex
    flex-wrap: nowrap
    overflow-x: scroll
    overflow-y: hidden
    padding-bottom: 1.5rem
    width: calc(100% + 1.6rem)
    &__wrap
        bottom: 0
        display: flex
        flex-wrap: wrap
        left: -1.6rem
        position: absolute
        width: calc(100% + 1.6rem)
        z-index: 10
    &__item
        background: $darkGray
        cursor: pointer
        flex: 0 0 auto
        margin-left: 1.6rem
        max-width: 13rem
        height: 13.6rem
        &--disabled,
        &--hidden
            display: none
    &__anchor
        display: block
    &__title
        color: $white
        display: block
        font-family: $fontOswald
        font-size: 1.3rem
        font-weight: 400
        letter-spacing: 1.5px
        line-height: 1.4
        margin-top: 0.8rem
        padding: 0 0.7rem
        text-transform: uppercase
    &__state
        color: $lightGray
        display: block
        font-family: $fontOswald
        font-size: 1.1rem
        letter-spacing: 1.5px
        line-height: 1.6
        margin-bottom: 1.3rem
    &__item
        text-align: center

@media $tablet
    .c-locations
        width: calc(65.5% - 10.6rem) // Accounting for left positioning
        &__wrap
            bottom: 1.6rem
            flex-wrap: nowrap
            left: 1.6rem
            width: 100%
        &__item
            &--first
                margin-left: 1.6rem

@media $desktop1
    .c-map
        height: calc(100vh - 3.2rem)

.u-finder
    height: auto
    margin-left: 0
    max-width: none
    padding: 1.6rem
    text-align: center
    width: calc(100% + 1.6rem)
    &__heading
        color: $white
        display: block
        font-weight: 400
        font-size: 1.2rem
        margin: 0 0 1rem 1.5rem
    &__distance-wrapper
        display: inline-block
        position: relative
        &:after
            background-image: url(/assets/img/dropdown.svg)
            background-repeat: no-repeat
            content: ''
            height: 1.4rem
            position: absolute
            right: 1.2rem
            top: 50%
            transform: translateY(-60%)
            width: .9rem
    &__distance,
    &__address,
    &__submit
        display: inline-block
        vertical-align: top
    &__distance,
    &__address
        background: #191919
        border: none
        color: $white
        font-weight: 500
        margin: .1rem
        min-width: 15rem
        &::-webkit-input-placeholder
            color: #B9B7B2
        &::-moz-placeholder
            color: #B9B7B2
        &:-ms-input-placeholder
            color: #B9B7B2
        &:-moz-placeholder
            color: #B9B7B2
    &__distance
        -webkit-appearance: none
        -moz-appearance: none
        appearance: none
        background: #191919
        color: #b9b7b2
        padding: .7rem 1rem .5rem
        min-width: 15rem
        height: 3.8rem
        border-radius: 0
        font-family: $baseFont
        position: relative
        top: -1px
        font-size: 1.3rem
        font-weight: 500
        letter-spacing: .05rem
        line-height: 2.4rem
        text-transform: uppercase
    &__address
        display: block
        margin-right: 0
        margin-top: 0.2rem
        min-width: 19rem
        width: calc(100% - 0.2rem)
    &__submit
        background: $primary
        border: none
        cursor: pointer
        display: block
        margin-top: 0.6rem
        position: relative
        top: 1px
        width: 100%
        &:after
            icon($iconSearch)
            color: $white
            font-size: 1.8rem
            line-height: 3.8rem
            padding: 0 1.6rem
    &__options
        margin: 1.5rem 0 0 1.5rem
    &__option
        color: $lightGray
        margin-right: 1.5rem
        &--selected
            color: $white
    .choices
        flex: none
        min-width: 15rem
        padding-bottom: 2px

@media $tablet
    .u-finder
        display: block
        height: 13.6rem
        text-align: left
        width: 43rem
        max-width: 43rem
        &__address
            display: inline-block
            margin-top: inherit
            width: auto
        &__submit
            display: inline-block
            margin-top: 0
            width: auto
        .choices
            display: inline-block

.u-options-label
    border-right: 1px solid #313131
    color: $white
    margin-right: 1.5rem
    padding-right: 1.5rem

.c-pane
    background: rgba(0, 5, 4, 0.9)
    color: $white
    font-family: $baseFont
    font-size: 1.5rem
    line-height: 1.4
    padding: 3.5rem 4rem
    width: 26rem
    z-index: 9999

    &__close
        background-image: url($imgPath + 'pin-selected.svg')
        background-position: 50%
        background-repeat: no-repeat
        background-size: cover
        bottom: -1.05rem
        content: ""
        display: block
        height: 2.5rem
        left: 0
        margin: 0 auto
        position: absolute
        right: 0
        width: 2.5rem
    &__title
        display: block
        margin-bottom: 1rem
    &__address,
    &__number
        display: block
        font-weight: 400
    &__number
        margin-bottom: 1rem
    &__link
        color: $accent2
        font-family: $fontOswald
        font-size: 1.3rem
        font-weight: 400
        letter-spacing: 1.5px
        text-transform: uppercase

.u-ajax-container
    display: inherit


/*------------------------------------*\
    # Detail Page
\*------------------------------------*/

.location-container
    background: $black
    border-bottom: 16px solid $lighterSecondary
    min-height: calc(100vh - 4rem) // Account for top navigation
    position: relative

.location-angle
  display: none

  @media $desktop1
    display: block
    position: absolute
    top: 0
    right: 49.8rem
    width: 9rem
    height: 100%
    background: url($imgPath + 'shape-location.png') transparent no-repeat 0 0
    background-size: 100% 100%

.location-image
    background-position: 50%
    background-size: cover
    height: 0
    padding-top: 75%
    position: relative
    width: 100%

    @media $desktop1
        cover()
        height: auto
        padding: 0
        right: 36rem
        width: auto

        &:before
            background-image: linear-gradient(to left, rgba(0, 0, 0, 1), rgba(0, 0, 0, 0) 24rem)
            content: ''
            cover()

    &__button
        background-color: $lighterSecondary
        color: #000504
        display: none
        font-family: $fontOswald
        font-size: 1.3rem
        left: 0
        letter-spacing: 1.5px
        line-height: 1.5em
        padding: 1rem 1.5rem
        position: absolute
        text-transform: uppercase
        top: 1.6rem

        @media $tablet
            display: block
        @media $desktop1
            top: 13rem

        &:before
            display: inline-block
            font-size: 2.3rem
            icon($iconArrow)
            margin-right: 1.1rem
            position: relative
            top: 0.3rem
            transform: rotate(90deg)

        &:focus,
        &:hover
            color: $gray
            text-decoration: none

.location-info
    background: $black
    height: 100%
    padding: 1.6rem
    padding-top: 4rem

    @media $mobile2
        padding-top: 6rem

    @media $tablet
        padding-top: 8rem

    @media $desktop1
        background: rgba(0, 0, 0, 0.8)
        bottom: 0
        overflow-y: scroll
        padding: 13.8rem 4.8rem 7.8rem 3rem
        position: absolute
        right: 0
        top: 0

    &,
    &__title,
    &__heading,
    &__cta
        color: $white

    &__main
        spaced(6.7rem)

        @media $tablet
            clearfix()

    &__main,
    &__blocks
        margin-left: auto
        margin-right: auto
        max-width: 25.6rem // Mobile width minus padding and main border

        @media $tablet
            max-width: 57.6rem

        @media $desktop1
            max-width: none
            width: 42rem

    &__blocks
        @media $tablet
            display: flex
            flex-wrap: wrap

    &__block
        @media $tablet
            flex-basis: calc(50% - 2.9rem)

            &:nth-child(odd)
                margin-right: 5.8rem

        .info-block__note a
            color: $accent2

    &__title,
    &__subtitle
        font-family: $fontOswald

    &__title
        font-size: 2.5rem
        letter-spacing: 2.67px
        line-height: 1.28em
        spaced(3rem)

        @media $tablet
            float: left
            margin-right: 5.8rem
            width: calc(50% - 2.9rem)

    &__subtitle
        color: $lightGray
        display: block
        font-size: 2rem
        font-weight: 400
        letter-spacing: 1.5px

    &__meta
        @media $tablet
            float: right
            padding-top: 0.5rem
            width: calc(50% - 2.9rem)

    &__link
        color: $accent2
        display: inline-block
        font: 1.1rem/1.5em $fontOswald
        letter-spacing: 1.5px
        spaced(2.5rem)
        text-transform: uppercase

    &__cta
        background-color: $accent2Buttons
        display: inline-block
        font-family: $fontOswald
        font-size: 1.3rem
        letter-spacing: 1.5px
        line-height: 1.5em
        overflow: hidden
        padding: 0.9rem 1.9rem 1.1rem
        position: relative
        text-transform: uppercase

        @media $tablet
            float: left

        &:focus,
        &:hover
            background-color: mix($accent2Buttons, $black, 97%)
            color: $white
            text-decoration: none

        &:after
            display: inline-block
            font-size: 2.4rem
            icon($iconArrow)
            margin-left: 0.8rem
            position: relative
            top: 0.1rem
            transform: rotate(-90deg)

    &__download-cta a 
        clear: both
        display: block
            
    &__cta-border
        bottom: 0
        left: 0
        position: absolute
        width: 125%

        path
            fill: mix($accent2Buttons, $black, 90%)

    &__address
        font-family: $baseFont
        font-size: 1.5rem
        font-weight: 500
        line-height: 1.6em
        spaced(0.6rem)

    &__numbers
        font-family: $baseFont
        font-size: 1.4rem
        line-height: 1.7em
        spaced(3rem)

    &__number
        font-weight: 500

    &__number-label
        font-weight: bold


.u-reveal-locations
    background: $darkGray
    cursor: pointer
    flex: 0 0 15rem
    height: 8.2rem
    margin-left: 1.6rem
    position: relative
    top: 50%
    transform: translateY(-50%)
    z-index: 1000
    &__reveal-button
        padding: 2.1rem 2.4rem
        text-align: center
    &__need-more-results
        color: $lightGray
        display: block
        font-size: 1.3rem
        font-weight: 500
        line-height: 1.6rem
        margin-bottom: 0.4rem
    &__show-more
        color: $white
        display: block
        font-family: $fontOswald
        font-size: 1.3rem
        line-height: 2rem
        letter-spacing: 1.5px
        text-transform: uppercase
    &.c-locations__item--disabled
        display: block
        visibility: hidden

.gm-style-pbt
    top: 25%

.locations-groups
    display: none

@media $tablet
    .locations-groups
        display: block
        position: absolute 
        background: $lighterSecondary
        z-index: 999
        right: 0
        padding: 2rem 2rem 1.5rem 2rem
        font-size: 1.1rem
        max-width: 18rem
        width: 14rem
        color: $white
        flex-wrap: nowrap
        text-align: center
        top: 13rem

        h4, li
            font-family: $fontOswald
            font-weight: 500
            letter-spacing: .05rem
            line-height: 2.4rem
            text-transform: uppercase

        h4
            color: $black        
            font-size: 1.3rem

        li
            cursor: pointer
            color: $primary
            font-weight: 500
            margin: 0.6rem 0        
            display: inline-block
            font: 1.3rem/1.5em $fontOswald
            letter-spacing: 1.5px
            display: block
            list-style: none

    .locations-groups.dark
        background: $darkGray
        padding: 1.4rem 2rem 1.3rem 2rem
        right: 1.6rem
        color: $white
        height: 13.7rem
        border: none

        h4
            font-size: 1.1rem
            color: $white        
        li
            color: $accent2
            font: 1.1rem/1.3em $fontOswald

@media $desktop3
    .locations-groups, .locations-groups.dark
        bottom: 3rem
        top: auto



.gm-style a, .gm-style-iw a   
    font-size: 1.1rem !important
    line-height: 1.5rem !important


.results-reset-button,.results-reset-button a
        text-decoration: none
        color: $accent2

