.u-product-detail
    &__back
        display: none
    &__current-image
        max-width: 41rem
        padding: 0 2.4rem
        width: 100%
    &__gallery
        text-align: center
    &__content
        centeredBlock(38rem)
    &__confirm
        display: block
        font-size: 1.3rem
        line-height: 1.9
        margin-left: auto
        margin-right: auto
        padding: 1.2rem 1rem
        text-align: center
        width: 100%
        max-width: 38rem

@media screen and (min-width: 768px)
    .u-product-detail
        &__back
            display: block !important
        &__current-image
            padding: 0

@media screen and (min-width: 999px)
    .u-product-detail
        display: flex
        flex-wrap: wrap
        justify-content: space-around
        &__gallery,
        &__content
            max-width: none
        &__gallery-wrapper
            max-width: 41rem
        &__gallery
            flex: 0 0 45rem
        &__content
            flex: 0 0 50rem
            margin: 0
        &__confirm-wrapper
            width: 100%
        &__confirm
            flex: 0 0 100%
            margin-top: 8.6rem
            width: 16rem

.u-gallery-thumbs
    display: flex
    flex-wrap: wrap
    justify-content: center
    margin: 1.2rem 0
    &__item
        cursor: pointer
        flex: 0 0 25%
        margin: 0 0.6rem
        max-width: 4.2rem

@media screen and (min-width: 999px)
    .u-gallery-thumbs
        justify-content: flex-start
        &__item
            max-width: none

.u-product-content
    &__title
        color: $darkGray
        font-family: $fontOswald
        font-size: 3rem
        line-height: 1.1
        margin-bottom: 1.2rem
    &__title,
    &__lead-text,
    &__price,
    &__text
        text-align: center
    &__lead-text,
    &__price,
    &__text
        color: $gray
        margin-bottom: 2.4rem
    &__lead-text
        font-size: 1.8rem
        letter-spacing: 0.3px
        line-height: 2.8rem
    &__price
        color: #050908
        font-family: $fontOswald
        font-size: 2.5rem
        font-wieght: 300
        letter-spacing: 1.5px
        line-height: 2.4rem
    &__text
        font-size: 1.5rem
        line-height: 2.4rem
        max-width: 38rem

@media screen and (min-width: 999px)
    .u-product-content
        &__title,
        &__lead-text,
        &__price,
        &__text
            text-align: left

.c-customizers
    centeredBlock(40rem)
    display: flex
    flex-wrap: wrap
    font-size: 2rem
    &__item
        background: #191919
        color: $white
        flex: 0 0 calc(50% - 2px)
        margin: 0 1px 2px
        padding: 0.5rem
        text-align: center
        &--full
            flex: 0 0 calc(100% - 1px)
            margin: 0 0 2px
        &--dynamic
            flex: 0 0 100%
        &--qty-on-standard
            flex: 0 0 100%
    &__heading
        font-family: $fontOswald
        font-size: 1.3rem
        letter-spacing: 1.5px
        line-height: 2rem
        text-transform: uppercase

@media screen and (min-width: 999px)
    .c-customizers
        margin: 0
        max-width: 50rem
        &__item
            &--amount
                flex: 0 0 35%
            &--qty
                flex: 0 0 26%
            &--option
                flex: 0 0 37%
            &--dynamic
                flex: 0 0 26%
            &--qty-on-standard
                flex: 0 0 26%

.u-product-detail
    &__gallery-wrapper
        margin-top: 5rem

@media $desktop2
    .u-product-detail
        &__gallery
            padding-left: 7rem

.u-step-back
    transform: translateY(-1.2rem)

.body--e-gift-card
    .u-step-back
        transform: translateY(-6rem)
