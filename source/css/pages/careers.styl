.careers-hero
    &_content
        position: relative
        color: $white
        background: url($imgPath + 'careers/careers-hero-black-overlay-mobile@2x.png') center no-repeat
        text-align: center
        background-size: 200px 310px
        padding: 5rem 0

        h1
            color: $lighterSecondary
            font-size: 3.2rem
            line-height: 1.1
            letter-spacing: 1px
            margin: 0 0 4rem
            padding: 10px 0 0 0
        p
            font-size: 1.6rem
            color: #F9F9F9
            margin: 0 auto 10px auto
            max-width: 52rem

    .white-hr
        background: url($imgPath + 'careers/careers-hero-hr@2x.png') no-repeat
        background-position: top
        background-size: auto 100%
        display: block
        margin: 0 auto 30px auto
        height: 33px

.careers-wrapper
    background-image: url('/assets/img/news-wrapper-bg.jpg')
    background-position: top center
    background-size: cover
    background-repeat: repeat-y
    margin-top: -1.5rem

.careers
    padding: 5rem 1.6rem 7.2rem
    position: relative

    &__heading
        color: $white
        spaced(8rem)
        text-align: center
        max-width: 42rem
        margin: 0 auto 4rem auto

    &__page-title
        color: $black
        font-family: $fontOswald
        font-size: 3.2rem
        letter-spacing: 2.5px
        line-height: 1.5em
        margin-top: 1.7rem
        marginCenter()
        max-width: 54.9rem
        position: relative
        spaced(4.4rem)
        text-align: center

        &:before
            background-image: linear-gradient(
                to left,
                $lighterGray calc(50% - 3.75rem),
                transparent calc(50% - 3.75rem),
                transparent calc(50% + 3.75rem),
                $lighterGray calc(50% + 3.75rem))
            bottom: 2.5rem
            content: ''
            display: block
            height: 0.1rem
            position: absolute
            width: 100%

        &:after
            color: $primary
            display: block
            font-size: 3.3rem
            icon($iconTexas)
            left: 0.1rem
            margin-top: 4.6rem
            position: relative

    &__title
        color: $white
        font-size: 3rem
        letter-spacing: 4px
        line-height: 1.2em
        spaced(2rem)

    &__subtitle
        font-size: 1.8rem
        letter-spacing: 0.26px
        line-height: 1.3em

    &__deco
      height: 6px
      background: url($imgPath + 'icn-intro-deco.svg') no-repeat center
      spaced(2rem)

.careers-form
    marginCenter()
    max-width: 117rem
    padding: 1.2rem

    &__buttons
        text-align: center

    &__submit
        buttonReset() // Intentional order
        background-color: $primary
        color: $white
        display: inline-block
        font: 1.5rem $fontOswald
        letter-spacing: 1.5px
        max-width: 36.8rem
        padding: 1rem 1.6rem 1.2rem
        text-transform: uppercase
        width: 100%

@media screen and (min-width: 768px)
    .careers-form
        padding: 6.4rem


@media screen and (max-width: 999px)    
    .body--careers .page-hero
            &__title
                font-size: 3rem
            &__subtitle
                font-size: 1.4rem


/*------------------------------------*\
    # Desktop Small
\*------------------------------------*/

@media $desktop1
    .careers-hero
        &_content
            background: url($imgPath + 'careers/careers-hero-black-overlay@2x.png') center no-repeat
            background-size: 310px

            h1
                font-size: 4.8rem
                padding: 0

            p
                font-size: 1.8rem
    .careers
        &__heading
            max-width: 53rem
            spaced(14rem)

        &__title
            font-size: 4.8rem
    
        &__page-title
            spaced(0.4rem)

.careers-iframe
    height: 70rem
    width: 100%
    overflow-y: scroll
    -webkit-overflow-scrolling: touch
    iframe
        height: 100%
        max-height: 100%
        max-width: 100%
        min-height: 100%
        min-width: 100%
        width: 100%
