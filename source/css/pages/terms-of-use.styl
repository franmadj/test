.terms-of-use

    background: url($imgPath + 'bg-dual-pat.png') center 150px no-repeat
    background-size: contain
    margin-top: -26px

    a
        color: #D29136

    &-content
        max-width: 690px
        margin: 0 auto

        h1
            text-align: center

        h2
            font-size: 32px
            line-height: 40px
            margin-bottom: 24px
            text-transform: uppercase

    &-landing-text
        padding-top: 59px
        padding-bottom: 27px

    &-landing-text, &-landing-text p, &-content-text, &-content-text p
        font-size: 15px
        line-height: 24px

    &-content-text
        margin-bottom: 113px
    &-content-text p
        margin-bottom: 26px


@media screen and (max-width: 769px)
    .terms-of-use
        background-size: 100%
        margin-top: 20px
