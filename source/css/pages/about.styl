.about-us-hero
    &_content
        position: relative
        color: $white
        background: url($imgPath + 'about/about-hero-black-overlay-mobile@2x.png') center no-repeat
        text-align: center
        background-size: 200px 310px
        padding: 5rem 0

        h1
            color: $lighterSecondary
            font-size: 3.2rem
            line-height: 1.1
            letter-spacing: 1px
            margin: 0 0 4rem
            padding: 10px 0 0 0
        p
            font-size: 1.6rem
            color: #F9F9F9
            margin: 0 auto 10px auto
            max-width: 52rem

    .white-hr
        background: url($imgPath + 'about/about-hero-hr@2x.png') no-repeat
        background-position: top
        background-size: auto 100%
        display: block
        margin: 0 auto 30px auto
        height: 33px

.about-history
        background: url($imgPath + 'about/about-offwhite-bg@2x.png') 170px -224px no-repeat
        background-size: 30em

        &_content
            max-width: 956px
            margin: 0 auto
            padding: 5rem 0 0 0

            h1
                text-align: center
                font-size: 3.2rem
                margin-bottom: 4.5rem

            .ahc-block
                color: #363434
                display: inline-block
                font-size: 1.6rem
                line-height: 1.6
                margin: 0 15px
                vertical-align: top

.red-hr
    background: url($imgPath + 'about/red-hr@2x.png') no-repeat
    background-position: top
    background-size: auto 100%
    display: block
    margin: 1.5rem auto 6rem auto
    height: 33px

.about-chef
    position: relative
    max-width: 1232px
    margin: 0 auto
    z-index: 10

    &__content
        display: flex
        flex-direction: row
        flex-wrap: wrap
        background: url($imgPath + 'about/about-offwhite-bg.png') center no-repeat

    &__col
         flex-basis: 100%
         text-align: center

    &__intro
        margin-bottom 6rem

    &__img
        margin-bottom: 4rem
        max-height: 60rem

    &__subtitle
        font-family: $fontOswald, Helvetica, sans-serif
        font-size: 1.6rem
        font-weight: 300
        color #8C908E
        letter-spacing 2px
        margin-bottom 2rem

    &__title
        font-size 3.2rem
        letter-spacing: 0.1em
        margin-bottom: 5rem

    &__txt
        color: #363434
        text-align: left
        max-width: 60rem
        margin: 0 auto

.about-quote
    background: #000
    color: white
    margin-bottom 1rem
    padding: 2rem 2rem 3rem 2rem
    text-align center
    width: 100%

    &__frame
        display: flex
        flex-direction: row
        align-items: center
        justify-content: space-around
        flex-wrap: wrap

    &__txt
        font-size: 1.6rem
        position: relative
        padding: 2rem 2rem 0 2rem

    &__txt:before
        display: block
        content: ""
        width: 2rem
        height: 2rem
        background: url($imgPath + 'icn-quote.svg') center no-repeat
        position: absolute
        top: 0
        left: 0

    &__by
        font-family: $fontOswald, Helvetica, sans-serif
        font-size: 1.3rem
        letter-spacing: 0.2em

@media $desktop1
    .about-us-hero
        &_content
            background: url($imgPath + 'about/about-hero-black-overlay@2x.png') center no-repeat
            background-size: 310px

            h1
                font-size: 4.8rem
                padding: 0

            p
                font-size: 1.8rem

    .about-history
        &_content
            padding: 6rem 0 0 0

            h1
                font-size: 3.2rem
                margin-bottom: 5.5rem

            .ahc-block
                font-size: 1.9rem
                width: 46%
                margin-bottom: 4rem

    .red-hr
            margin-top: 0rem


    .about-chef
        &__col
            flex-basis: 50%
            text-align: left
        &__img
            display: block
            width: 92%
            margin-left: auto
            margin-right: auto
            max-height: none
        &__intro
            padding-top: 8rem
            max-width: 42rem
            margin: 0 auto
        &__subtitle
            margin-bottom: 3.2rem
        &__title
            font-size: 4.8rem
            margin-bottom: 3.2rem
        &__txt
            font-size: 1.8rem

    .about-quote
        padding: 4rem 3.2rem
        max-width: 33rem
        flex-wrap: nowrap
        justify-content: space-between

        &__txt
            font-size: 1.8rem
            font-style: italic

@media $desktop2
    .about-chef
        &__img
            margin-bottom: 0
        &__content
            margin-bottom -5rem

