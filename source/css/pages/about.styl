.about-modal
    height: 100%
    left: 50%
    max-height: 36.6rem
    max-width: 52rem
    position: fixed
    text-align: center
    top: 50%
    transform: translate(-50%, -50%)
    width: 100%
    z-index: 45
    &__content
        height: 100%
        left: 0
        overflow: auto
        padding: 2px
        position: absolute
        top: 0
        width: 100%
    &__video
        position: relative
        padding-bottom: 56.26%
        padding-top: 30px
        height: 0
        overflow: hidden
        iframe, object, embed
            position:absolute
            top:0
            left:0
            width:100%
            height:100%

.about-modal-close
    background: $primary
    cursor: pointer
    height: 5rem
    position: fixed
    right: 0
    top: 4.8rem
    width: 16rem
    z-index: 50
    &:before
        color: $white
        content: '\e809'
        font-family: $fontIcon
        font-size: 2rem
        left: 0
        line-height: 5rem
        margin: 0 auto
        position: absolute
        right: 0
        text-align: center

.about-modal-overlay
    background: rgba(0,0,0,0.85)
    height: 100%
    left: 0
    position: fixed
    top: 0
    width: 100%
    z-index: 40

.btn-red-arrow
    color: #fff
    letter-spacing: 1px
    font-size: 13px
    font-family: $fontOswald
    text-transform: uppercase
    border: none
    cursor: pointer
    padding: 13px 60px 13px 25px
    background: #6e181e url($imgPath + 'about/red-btn-arrow.png') 90% 50% no-repeat

    &:hover
        color: $white
        text-decoration: none

@media screen and (-webkit-min-device-pixel-ratio: 2)
    .btn-red-arrow
        -webkit-background-size: 24px 11px !important
        background: #6e181e url($imgPath + 'about/red-btn-arrow@2x.png') 91px no-repeat

