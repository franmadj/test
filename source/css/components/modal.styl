.c-modal
    background: #FFFBF5
    background-image: url($imgPath + 'reservation-bg.jpg')
    background-repeat: no-repeat
    background-size: contain
    height: 100%
    left: 50%
    max-height: 49.6rem
    max-width: 52rem
    position: fixed
    text-align: center
    top: 50%
    transform: translate(-50%, -50%)
    width: 100%
    z-index: 45
    &__content
        height: 100%
        left: 0
        overflow: visible
        padding: 4rem 4.8rem
        position: absolute
        top: 0
        width: 100%

        .table-finder
            background-color: rgba(0,0,0,.9)

    &__pretext
        color: #8C908E
        display: block
        font-weight: 400
        margin-bottom: 2rem
    &__heading
        display: block
        margin-bottom: 4.8rem

@media screen and (min-width: 480px)
	.c-modal
		max-height: 44.6rem

@media screen and (min-width: 999px)
	.c-modal
		max-height: 36.6rem

.c-modal-close
    background: $primary
    cursor: pointer
    height: 4.7rem
    position: fixed
    right: 0
    top: 5.3rem
    width: 15.8rem
    z-index: 50
    &:before
        color: $white
        content: '\e809'
        font-family: $fontIcon
        font-size: 2rem
        left: 0
        line-height: 5rem
        margin: 0 auto
        position: absolute
        right: 0
        text-align: center

.c-modal-overlay
    background: rgba(0,0,0,0.85)
    height: 100%
    left: 0
    position: fixed
    top: 0
    width: 100%
    z-index: 40

.-modal-disabled
    display: none
