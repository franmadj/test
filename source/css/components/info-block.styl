.info-block
    color: mix($white, $black, 85%)
    font-family: $baseFont
    font-size: 1.5rem
    line-height: 1.6em
    spaced(2.7rem)

    &__heading,
    &__subheading,
    &__price
        color: $white

    &__heading,
    &__price
        font-family: $fontOswald

    &__heading
        border-bottom: 1px solid mix($lightGray, $black, 25%)
        font-size: 1.3rem
        letter-spacing: 1.5px
        line-height: 1.5em
        padding-bottom: 1.2rem
        spaced(1.4rem)

    &__subheading
        display: block
        spaced(0.8rem)

    &__price
        bottom: 0.5rem
        float: right
        font-size: 1.5rem
        font-weight: 400
        line-height: 2em
        margin-left: 1rem
        position: relative

    &__schedule
        spaced(2.7rem)

    &__time
        display: block
