.c-adjustments
    border-top: 1px solid #E7E6E0
    margin-top: 4rem
    padding-top: 4rem
    &__item
        display: flex
        flex-wrap: wrap
        padding-bottom: 3.2rem
        &:last-child
            padding-bottom: 0
    &__type,
    &__amount
        flex: 1
    &__type
        color: #141415
        font-weight: 400
    &--checkout
        border: none
        color: #B9B7B2
        margin: 0
        padding: 0
        &:first-child
            border-top: none
            margin: 0
            padding: 0
        .u-checkout-adjustment,
        .c-adjustments__amount
            color: inherit
