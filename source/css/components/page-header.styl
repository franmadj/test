.c-page-header
    margin-bottom: 5rem
    text-align: center

    &__heading
        color: $darkGray
        display: block
        font-family: $fontOswald
        font-size: 3rem
        letter-spacing: 0.08em
        line-height: 1.1
        margin-bottom: 1.2rem
        text-transform: uppercase
    &__text
        color: $gray
        font-size: 1.6rem
        line-height: 1.2

    &--disabled
    	display: none


@media $desktop1
    .c-page-header
        margin-bottom: 5rem

        &__heading
            font-size: 4rem
            margin-bottom: 2.4rem
        &__text
            font-size: 1.8rem
