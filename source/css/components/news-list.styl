.news-wrapper
    background-image: url('/assets/img/news-wrapper-bg.jpg')
    background-position: top center
    background-size: cover
    background-repeat: repeat-y

.news-list
    border-bottom: 1px solid $lighterGray
    padding-bottom: 4.8rem
    spaced(7.4rem)

    &:last-of-type
        border-bottom: 0
        spaced(0)

    @media $tablet
        marginCenter()
        max-width: 121rem

    &__title
        color: $black
        font-family: $fontOswald
        font-size: 3.2rem
        letter-spacing: 2.5px
        line-height: 1.5em
        marginCenter()
        max-width: 54.9rem
        position: relative
        spaced(6.6rem)
        text-align: center

        &:before
            background-image: linear-gradient(
                to left,
                $lighterGray calc(50% - 3.75rem),
                transparent calc(50% - 3.75rem),
                transparent calc(50% + 3.75rem),
                $lighterGray calc(50% + 3.75rem))
            bottom: 2.5rem
            content: ''
            display: block
            height: 0.1rem
            position: absolute
            width: 100%

        &:after
            color: $primary
            display: block
            font-size: 3.3rem
            icon($iconTexas)
            left: 0.1rem
            margin-top: 4.6rem
            position: relative

    &__items
        @media $tablet
            display: flex
            flex-wrap: wrap

    &__item
        border-bottom: 1px solid $lighterGray
        padding-bottom: 3rem
        spaced(4.4rem)

        &:last-child
            border-bottom: 0
            spaced(0)

        @media $tablet
            flex-basis: calc(50% - 3.3rem)

            &:nth-child(2n+1)
                margin-right: 6.6rem

            &:nth-last-child(2)
                border-bottom: 0
                spaced(0)

        @media $desktop
            padding-right: 6rem

    &__link
        background-color: $primary
        color: $white
        display: block
        font: 1.5rem/1.5em $fontOswald
        letter-spacing: 1.5px
        marginCenter()
        max-width: 17.6rem
        padding: 1.3rem 4rem
        text-align: center
        text-transform: uppercase

        &:focus,
        &:hover
            background-color: mix($primary, $black, 80%)
            color: $white
            text-decoration: none

.news-item
    position: relative

    @media $desktop1
        padding-left: 11rem

    &__title
        color: $black
        font-family: $fontOswald
        font-size: 2.5rem
        letter-spacing: 2.5px
        line-height: 1.3em
        spaced(1.8rem)
        text-align: left

    &__date
        spaced(1.6rem)

        @media $desktop1
            left: 0
            position: absolute
            top: 0

    &__teaser
        color: $lightGray
        font-size: 1.6rem
        letter-spacing: 0.3px
        line-height: 1.5em
        max-width: 39.2rem
        spaced(1.8rem)

    &__link
        color: $primary
        font: 1.3rem/1.5em $fontOswald
        letter-spacing: 1.5px
        text-transform: uppercase

        &:focus,
        &:hover
            text-decoration: none

        &:after
            display: inline-block
            font-size: 2.4rem
            icon($iconArrow)
            margin-left: 0.8rem
            position: relative
            top: 0.1rem
            transform: rotate(-90deg)

        ^[0]__title &
            color: inherit
            font-size: inherit
            line-height: inherit

            &:focus,
            &:hover
                text-decoration: underline

            &:after
                content: none
