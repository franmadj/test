.choices
    background: #191919
    border: none
    flex: 1
    font-size: 1.3rem
    font-weight: 500
    letter-spacing: .05rem
    margin: .1rem
    position: relative
    text-transform: uppercase
    &__input
        border: none
        display: none
        width: 100%
    &__list
        &--dropdown
            background: $white
            display: none
            position: absolute
            top: 100%
            width: 100%
            z-index: 1
            overflow-y: scroll
    &__list
        max-height: 25rem
        // width: calc(100% + 1px)
        &.is-active
            display: block
    &__inner
        &:before
            background-image: url($imgPath + 'dropdown.svg')
            background-repeat: no-repeat
            content: ''
            height: 1.4rem
            position: absolute
            right: 1.2rem
            top: 50%
            transform: translateY(-60%)
            width: 0.9rem
    &__item
        background: #191919
        color: #B9B7B2
        padding: 0.7rem 1rem 0.5rem
        &--choice
            cursor: pointer
        &--disabled
            background: #4d4d4d !important
        &.is-highlighted
            background: #2e2e2e
    &.is-open
        .choices
            &__inner
                &:before
                    transform: rotate(180deg) translateY(7px)

.datepicker
	background: transparent
	border: none
	color: #B9B7B2
	cursor: pointer

.c-form-error
	color: $error
	margin: 1.4rem 1rem

.u-error-wrapper
    margin-bottom: 1.5rem
    padding: 3.2rem

