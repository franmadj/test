.table-finder
    background-color: rgba(0, 0, 0, 0.7)
    display: flex
    flex-wrap: wrap
    margin: 0 auto
    max-width: 44.3rem
    position: relative
    margin-top: -4rem

    &__field
        padding-top: 0.2rem
        cursor: pointer
        spaced(0.1rem)

        &:last-of-type
            spaced(0)

        &.-date,
        &.-location
            flex-basis: 100%

        &.-time,
        &.-guests
            flex-basis: calc(50% - 0.05rem)

        &.-time
            margin-right: 0.1rem

    &__label
        color: $white
        display: block
        font: 400 1.1rem/1.5em $fontOswald
        letter-spacing: 1.5px
        text-align: center
        text-transform: uppercase

    &__dropdown
        .choices
            background: none
            text-align: center

            &__error--select
                border: 2px solid #972129;
                top: -3px;

            &,
            &__inner
                height: 4rem

            &__list
                z-index: 9999

            &__list--single
                overflow: hidden
                .choices__item
                    background: none
            &__item
                overflow-x: hidden
                white-space: nowrap

    &__select
        background-color: transparent
        border: 0
        color: $lightGray
        cursor: pointer
        display: block
        font: 500 1.3rem/1.3em $baseFont
        max-width: none
        padding: .6rem 0 .9rem 1rem
        text-align-last: center
        text-transform: uppercase
        width: 100%

    &__submit
        buttonReset() // Intentional order
        background-color: $primary
        color: $white
        font: 400 1.3rem/1.5em $fontOswald
        letter-spacing: 1.5px
        padding: 1.4rem
        position: relative
        text-align: center
        text-transform: uppercase
        width: 100%

        &:focus,
        &:hover
            background-color: mix($primary, $black, 90%)

        &:after
            display: inline-block
            font-size: 2.4rem
            icon($iconArrow)
            margin-left: 0.8rem
            position: relative
            top: 1px
            transform: rotate(-90deg)

    &__submit-border
        bottom: -0.1rem
        left: 0
        position: absolute
        width: 100%

        path
            fill: #650f1c





/*------------------------------------*\
    # Desktop Small
\*------------------------------------*/

@media $desktop1
    .table-finder
        background-color: rgba(0, 0, 0, 0.3)

        &__field
            spaced(0.2rem)

            &.-date,
            &.-time,
            &.-guests
                background-color: rgba(0, 0, 0, 0.7)
                padding: 0

                & ^[0]__label
                    padding: 0.5rem 0 0.5rem
                    spaced(0.2rem)

            &.-date
                flex-basis: calc(36% - 0.1rem)
                margin-right: 0.2rem

            &.-time
                flex-basis: calc(26% - 0.2rem)
                margin-right: 0.2rem

            &.-guests
                flex-basis: calc(38% - 0.1rem)
                margin-bottom: 0.2rem

            &.-location
                clearfix()
                flex-basis: 100%
                height: 4rem
                background-color: rgba(0, 0, 0, 0.7)

                & ^[0]__label
                    float: left
                    padding-left: 1.6rem
                    spaced(0)
                    transform: translateY(50%)

                & ^[0]__dropdown
                    float: right
                    width: 25rem

                & ^[0]__select
                    padding: 0
                    transform: translateY(50%)

        &__label
            font-size: 1.3rem
            spaced(0.5rem)

        &__dropdown
            height: 4rem

        &__select,
        &__input
            padding: 0
            transform: translateY(50%)

        &__submit
            &:after
                margin-left: 1rem
