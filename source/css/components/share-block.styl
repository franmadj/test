.share-block
    color: $primary

    &__label
        font: 1.3rem/1.5em $fontOswald
        letter-spacing: 1.5px
        text-transform: uppercase

    &__link
        display: inline-block
        padding: 0.4rem 0.8rem
        position: relative

        &:hover
            text-decoration: none

        &:before
            display: block
            font-size: 2.4rem

        &.-facebook:before
            icon($iconFacebook)

        &.-twitter:before
            icon($iconTwitter)

        &.-instagram:before
            icon($iconInstagram)

        &.-pinterest:before
            icon($iconPinterest)





/*------------------------------------*\
    # Desktop Small
\*------------------------------------*/

@media $desktop1
    .share-block
        text-align: center

        &__label
            display: block
            spaced(1.6rem)

        &__link
            display: block

            &:before
                spaced(0.6rem)
